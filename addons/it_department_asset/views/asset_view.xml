<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- LIST VIEW -->
        <record id="view_it_asset_list" model="ir.ui.view">
            <field name="name">it.asset.list</field>
            <field name="model">it.asset</field>
            <field name="arch" type="xml">
                <list>
                    <field name="product_id"/>
                    <field name="asset_tag"/>
                    <field name="lot_id"/>
                    <field name="employee_id"/>
                    <field name="state"/>
                </list>
            </field>
        </record>

        <!-- FORM VIEW -->
        <record id="view_it_asset_form" model="ir.ui.view">
            <field name="name">it.asset.form</field>
            <field name="model">it.asset</field>
            <field name="arch" type="xml">
                <form string="IT">
                    <sheet>
                        <group>
                            <field name="product_id"
                                   options="{'no_create': True}"
                                   domain="[('type','in',['product','consu'])]"/>

                            <field name="asset_tag"/>

                            <field name="lot_id"
                                   options="{'no_create': True}"/>

                            <field name="employee_id"/>

                            <field name="state" readonly="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- ACTION -->
        <record id="action_it_asset" model="ir.actions.act_window">
            <field name="name">IT</field>
            <field name="res_model">it.asset</field>
            <field name="view_mode">list,form</field>
        </record>

        <!-- MENU (Linking to it_department's root menu) -->
        <menuitem id="menu_it_asset"
                  name="Assets"
                  parent="it_department.menu_it_root"
                  action="action_it_asset"
                  sequence="20"/>

    </data>
</odoo>
