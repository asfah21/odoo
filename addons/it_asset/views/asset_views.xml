<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_it_asset_list" model="ir.ui.view">
        <field name="name">it.asset.list</field>
        <field name="model">it_asset.asset</field>
        <field name="arch" type="xml">
            <list string="IT Assets">
                <field name="asset_tag"/>
                <field name="name"/>
                <field name="model"/>
                <field name="specification"/>
                <field name="category_id"/>
                <field name="product_id"/>
                <field name="lot_id"/>
                <field name="employee_id"/>
                <field name="state" widget="badge" 
                       decoration-info="state == 'available'" 
                       decoration-success="state == 'assigned'"
                       decoration-warning="state == 'repair'"
                       decoration-danger="state == 'retired'"/>
            </list>
        </field>
    </record>

    <record id="view_it_asset_form" model="ir.ui.view">
        <field name="name">it.asset.form</field>
        <field name="model">it_asset.asset</field>
        <field name="arch" type="xml">
            <form string="IT">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="available,assigned,repair,retired"/>
                </header>
                <sheet>
                    <field name="is_consumable" invisible="1"/>
                    <div class="oe_title">
                        <h1 invisible="is_consumable">
                            <field name="asset_tag" placeholder="Asset Tag..."/>
                        </h1>
                        <label for="name" string="Asset Name"/>
                        <h2>
                            <field name="name" placeholder="e.g. MacBook Pro..."/>
                        </h2>
                        <label for="model" string="Model"/>
                        <h3>
                            <field name="model" placeholder="e.g. A2338..."/>
                        </h3>
                        <label for="specification" string="Spesifikasi"/>
                        <div>
                            <field name="specification" placeholder="e.g. RAM 16GB, SSD 512GB..."/>
                        </div>
                    </div>
                    <group>
                        <group>
                            <field name="category_id"/>
                            <field name="product_id"/>
                            <field name="lot_id" domain="[('product_id', '=', product_id)]" context="{'default_product_id': product_id}" invisible="is_consumable"/>
                        </group>
                        <group>
                            <field name="employee_id" invisible="is_consumable"/>
                        </group>
                    </group>
                    <notebook invisible="is_consumable">
                        <page string="Assignment History" name="assignments">
                            <field name="assignment_ids">
                                <list editable="bottom">
                                    <field name="employee_id"/>
                                    <field name="assignment_date"/>
                                    <field name="return_date"/>
                                    <field name="state" widget="badge"/>
                                    <button name="action_return" type="object" string="Return" invisible="state == 'returned'" icon="fa-undo"/>
                                </list>
                            </field>
                        </page>
                        <page string="Maintenance History" name="maintenance">
                            <field name="maintenance_ids">
                                <list editable="bottom">
                                    <field name="maintenance_date"/>
                                    <field name="maintenance_type"/>
                                    <field name="description"/>
                                    <field name="cost"/>
                                    <field name="technician"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_it_asset_search" model="ir.ui.view">
        <field name="name">it.asset.search</field>
        <field name="model">it_asset.asset</field>
        <field name="arch" type="xml">
            <search string="Search IT Assets">
                <field name="name" string="Asset" filter_domain="['|', '|', '|', ('name', 'ilike', self), ('asset_tag', 'ilike', self), ('model', 'ilike', self), ('specification', 'ilike', self)]"/>
                <field name="asset_tag"/>
                <field name="model"/>
                <field name="specification"/>
                <field name="category_id"/>
                <field name="employee_id"/>
                <field name="product_id"/>
                
                <filter string="Available" name="available" domain="[('state', '=', 'available')]"/>
                <filter string="Assigned" name="assigned" domain="[('state', '=', 'assigned')]"/>
                <filter string="In Repair" name="repair" domain="[('state', '=', 'repair')]"/>
                <separator/>
                <filter string="Consumables" name="consumable" domain="[('is_consumable', '=', True)]"/>
                <filter string="Permanent Assets" name="permanent" domain="[('is_consumable', '=', False)]"/>
                
                <group expand="0" string="Group By">
                    <filter string="Category" name="group_category" context="{'group_by': 'category_id'}"/>
                    <filter string="Status" name="group_status" context="{'group_by': 'state'}"/>
                    <filter string="Employee" name="group_employee" context="{'group_by': 'employee_id'}"/>
                    <filter string="Product" name="group_product" context="{'group_by': 'product_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_it_asset" model="ir.actions.act_window">
        <field name="name">Assets</field>
        <field name="res_model">it_asset.asset</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first IT Asset!
            </p>
            <p>
                Track laptops, monitors, mouse, and other IT equipment here.
            </p>
        </field>
    </record>

    <!-- [1] ROOT MENU (App Switcher) -->
    <menuitem id="it_asset_menu_root" 
              name="IT" 
              sequence="10" 
              web_icon="it_asset,static/description/icon.png"/>

    <!-- [2] TOP BAR MENU (Parent Dropdown) -->
    <menuitem id="it_asset_menu_management" 
              name="Asset Management" 
              parent="it_asset_menu_root" 
              sequence="10"/>

    <!-- [3] CHILD DROP_DOWN ITEMS -->
    <menuitem id="it_asset_menu_assets" 
              name="Assets" 
              parent="it_asset_menu_management" 
              action="action_it_asset" 
              sequence="10"/>
</odoo>
